# COLOR MAKEFILE
COLOR_RESET=\033[0m
COLOUR_GREEN=\033[0;32m
COLOUR_MAGENTA = \033[0;35m
COLOUR_BLUE=\033[0;36m

# VAR
NAME = animal
CPP = c++

CFLAGS = -Wall -Wextra -Werror -std=c++98

SRCS_FILES = main.cpp Animal.cpp Dog.cpp Cat.cpp WrongAnimal.cpp WrongCat.cpp

# RULES
all: $(NAME)

$(NAME):
	@$(CPP) $(CFLAGS) $(SRCS_FILES) -o $(NAME)
	@echo "$(COLOUR_GREEN)$(NAME) generate ü¶ñ$(COLOR_RESET)"

# Clean
clean:
	@rm -rf $(OBJ)
	@echo "$(COLOUR_BLUE) clean üêü$(END_COLOR)"

fclean : clean
	@rm -rf $(NAME)
	@echo "$(COLOUR_BLUE) fclean üê≥$(COLOR_RESET)"

re:fclean all
	@echo "$(COLOUR_MAGENTA)make re OK üå∏$(COLOR_RESET)"

.PHONY: all clean fclean re
