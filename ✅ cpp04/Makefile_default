# COLOR MAKEFILE
COLOR_RESET=\033[0m
COLOUR_GREEN=\033[0;32m
COLOUR_MAGENTA = \033[0;35m
COLOUR_BLUE=\033[0;36m

# VAR
NAME =
CPP = c++

FLAGS = -Wall -Wextra -Werror -std=c++98

HEADERS = .hpp
SRCS_FILES =
OBJS = $(SRCS_FILES:.cpp=.o)

# RULES
all: $(NAME)

%.o: %.cpp $(HEADERS)
	@$(CPP) $(FLAGS) -c -o $@ $<

$(NAME):  $(OBJS)
	@$(CPP) $(FLAGS) $(SRCS_FILES) -o $(NAME)
	@echo "$(COLOUR_GREEN)$(NAME) generate 🦖$(COLOR_RESET)"

# Clean
clean:
	@rm -rf $(OBJS)
	@echo "$(COLOUR_BLUE) clean 🐟$(END_COLOR)"

fclean : clean
	@rm -rf $(NAME)
	@echo "$(COLOUR_BLUE) fclean 🐳$(COLOR_RESET)"

re:fclean all
	@echo "$(COLOUR_MAGENTA)make re OK 🌸$(COLOR_RESET)"

.PHONY: all clean fclean re
